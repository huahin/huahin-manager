<assembly>
  <id>distribution</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>huahin-manager-${project.version}</baseDirectory>
  <fileSets>
    <fileSet>
      <outputDirectory>/log</outputDirectory>
      <includes>
        <include></include>
      </includes>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <outputDirectory>/queue/queue</outputDirectory>
      <includes>
        <include></include>
      </includes>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <outputDirectory>/queue/jar</outputDirectory>
      <includes>
        <include></include>
      </includes>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/conf</directory>
      <outputDirectory>/conf</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/webapp/WEB-INF</directory>
      <outputDirectory>/webapp/WEB-INF</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <directory></directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>CHANGES.txt</include>
        <include>LICENSE.txt</include>
        <include>README.txt</include>
      </includes>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/scripts</directory>
      <outputDirectory>/bin</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>/lib</outputDirectory>
      <fileMode>0644</fileMode>
    </dependencySet>
  </dependencySets>
</assembly>
