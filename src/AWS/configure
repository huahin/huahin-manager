MASTER=`grep "\"isMaster\":true" /mnt/var/lib/info/instance.json`
if [ -z "$MASTER" ];
then
  exit 0
fi

wget https://s3.amazonaws.com/huahin/manager/huahin-manager-0.1.1.tar.gz
mkdir -p /home/hadoop/huahin-manager
tar -C /home/hadoop/huahin-manager -xzf huahin-manager-0.1.1.tar.gz

JOBTRACKER=`hostname`:9001

echo "mapred.job.tracker=$JOBTRACKER" > /home/hadoop/huahin-manager/huahin-manager-0.1.1/conf/huahinManager.properties
/home/hadoop/huahin-manager/huahin-manager-0.1.1/bin/manager start >> /home/hadoop/huahin-manager/huahin-manager-0.1.1/log/huahin-manager.log

exit 0
